<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Reina.MacCredy</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        @RenderSection("Styles", required: false)
    </head>
    <body>
       <div class="wrapper">
       <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-shop"></i>
                        Reina.MacCredy Shop
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="#" id="manageDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear"></i>
                                        Manage
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="manageDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">
                                                <i class="bi bi-box"></i>
                                                View Products
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">
                                                <i class="bi bi-folder"></i>
                                                View Categories
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                        <i class="bi bi-receipt"></i>
                                        Orders
                                    </a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i>
                                        Dashboard
                                    </a>
                                </li>
                            }
                        </ul>

                        <partial name="_LoginPartial" />
                        <div class="d-flex align-items-center gap-3">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-area="" asp-controller="Order" asp-action="Index" class="nav-link">
                                    <i class="bi bi-receipt"></i>
                                    My Orders
                                </a>
                            }
                            <div class="cart-icon">
                                <a asp-controller="ShoppingCart" asp-action="Index" class="position-relative">
                                    <i class="bi bi-cart fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count">
                                        0
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
       </header>

       <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
       </div>

       <footer class="footer">
            <div class="container py-5">
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand mb-4">
                            <h3><i class="bi bi-shop"></i> Reina.MacCredy Shop</h3>
                        </div>
                        <p class="mb-4">We provide high-quality products at affordable prices. Your satisfaction is our top priority.</p>
                        <div class="footer-social">
                            <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <h4 class="footer-title">Shop</h4>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Home" asp-action="Index" class="footer-link">Home</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a asp-controller="Product" asp-action="Index" class="footer-link">Products</a></li>
                                <li><a asp-controller="Category" asp-action="Index" class="footer-link">Categories</a></li>
                            }
                            <li><a asp-controller="ShoppingCart" asp-action="Index" class="footer-link">Shopping Cart</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <h4 class="footer-title">Account</h4>
                        <ul class="list-unstyled">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Login" class="footer-link">Sign In</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Register" class="footer-link">Register</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Order" asp-action="Index" class="footer-link">My Orders</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index" class="footer-link">Profile</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h4 class="footer-title">Contact Us</h4>
                        <ul class="list-unstyled contact-info">
                            <li><i class="bi bi-geo-alt"></i> 123 Shopping Street, District 1, HCMC, Vietnam</li>
                            <li><i class="bi bi-telephone"></i> +84 123 456 789</li>
                            <li><i class="bi bi-envelope"></i> info@reinamaccredy-shop.com</li>
                            <li><i class="bi bi-clock"></i> Monday - Friday: 9:00 - 22:00</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="container">
                    <div class="row align-items-center py-3">
                        <div class="col-md-6">
                            <p class="mb-md-0">&copy; @DateTime.Now.Year - Reina.MacCredy Shop - All rights reserved</p>
                        </div>
                        <div class="col-md-6">
                            <div class="text-md-end">
                                <a asp-controller="Home" asp-action="Privacy" class="me-3">Privacy Policy</a>
                                <a href="#" class="me-3">Terms of Service</a>
                                <a href="#">FAQ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </footer>
       </div>
       
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    </body>
</html>
