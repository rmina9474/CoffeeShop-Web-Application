<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Reina.MacCredy</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        @RenderSection("Styles", required: false)
    </head>
    <body data-is-admin="@User.IsInRole("Admin").ToString().ToLower()">
       <div class="wrapper">
       <header class="sticky-top shadow-sm">
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-shop text-primary fs-3 me-2"></i>
                        <span class="fw-bold">Reina.MacCredy</span>
                        <span class="ms-1 text-primary">Shop</span>
                    </a>
                    
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" 
                            data-bs-target="#navbarContent" aria-controls="navbarContent" 
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarContent">
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item mx-2">
                                    <a class="nav-link d-flex align-items-center" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2"></i>
                                        <span>Dashboard</span>
                                    </a>
                                </li>
                                <li class="nav-item dropdown mx-2">
                                    <a class="nav-link d-flex align-items-center" href="#" id="manageDropdown" 
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear me-2"></i>
                                        <span>Manage</span>
                                        <i class="bi bi-chevron-down ms-1 small"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm" aria-labelledby="manageDropdown">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center py-2" 
                                               asp-area="" asp-controller="Product" asp-action="AdminIndex">
                                                <i class="bi bi-box me-2 text-primary"></i>
                                                <span>Products</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center py-2" 
                                               asp-area="" asp-controller="Category" asp-action="Index">
                                                <i class="bi bi-folder me-2 text-primary"></i>
                                                <span>Categories</span>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item mx-2">
                                    <a class="nav-link fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item mx-2">
                                    <a class="nav-link fw-semibold" asp-area="" asp-controller="Product" asp-action="Browse">Products</a>
                                </li>
                                <li require-admin="true" class="nav-item mx-2">
                                    <a class="nav-link fw-semibold" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                                </li>
                            </ul>
                        }

                        <div class="d-flex align-items-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown">
                                    <a class="btn btn-outline-primary rounded-pill me-3 d-flex align-items-center" 
                                       href="#" role="button" id="accountDropdown" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        @{
                                            var userManager = (Microsoft.AspNetCore.Identity.UserManager<Reina.MacCredy.Models.ApplicationUser>)Context.RequestServices.GetService(typeof(Microsoft.AspNetCore.Identity.UserManager<Reina.MacCredy.Models.ApplicationUser>));
                                            var currentUser = userManager.GetUserAsync(User).Result;
                                            var avatarUrl = string.IsNullOrEmpty(currentUser?.AvatarUrl) ? "/images/default-avatar.png" : currentUser.AvatarUrl;
                                        }
                                        <img src="@avatarUrl" alt="Profile" class="user-avatar-header me-2" />
                                        <span>Hello @User.Identity.Name.Split('@')[0]!</span>
                                        <i class="bi bi-chevron-down ms-2 small"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm" aria-labelledby="accountDropdown">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center py-2" 
                                               asp-area="" asp-controller="Account" asp-action="Profile">
                                                <i class="bi bi-gear me-2 text-primary"></i>
                                                <span>Settings</span>
                                            </a>
                                        </li>
                                        @if (!User.IsInRole("Admin"))
                                        {
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center py-2" 
                                                   asp-area="" asp-controller="Order" asp-action="Index">
                                                    <i class="bi bi-receipt me-2 text-primary"></i>
                                                    <span>My Orders</span>
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" 
                                                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2 text-danger">
                                                    <i class="bi bi-box-arrow-right me-2"></i>
                                                    <span>Logout</span>
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary rounded-pill me-2" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-person"></i> Login
                                </a>
                                <a class="btn btn-primary rounded-pill" asp-area="Identity" asp-page="/Account/Register">
                                    Register
                                </a>
                            }
                            
                            @if (!User.IsInRole("Admin"))
                            {
                                <div class="cart-icon ms-3">
                                    <a asp-controller="ShoppingCart" asp-action="Index" 
                                       class="cart-btn position-relative">
                                        <div class="cart-btn-inner">
                                            <i class="bi bi-cart3"></i>
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count">
                                                0
                                            </span>
                                        </div>
                                        <span class="cart-label d-none d-md-inline">Cart</span>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
       </header>

       <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
       </div>

       <footer class="footer">
            <div class="container py-5">
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand mb-4">
                            <h3><i class="bi bi-shop"></i> Reina.MacCredy Shop</h3>
                        </div>
                        <p class="mb-4">We provide high-quality products at affordable prices. Your satisfaction is our top priority.</p>
                        <div class="footer-social">
                            <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="social-icon"><i class="bi bi-youtube"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <h4 class="footer-title">Shop</h4>
                        <ul class="list-unstyled">
                            <li><a asp-controller="Home" asp-action="Index" class="footer-link">Home</a></li>
                            <li><a asp-controller="Product" asp-action="Browse" class="footer-link">Products</a></li>
                            <li require-admin="true"><a asp-controller="Category" asp-action="Index" class="footer-link">Categories</a></li>
                            <li hide-for-admin="true"><a asp-controller="ShoppingCart" asp-action="Index" class="footer-link">Shopping Cart</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <h4 class="footer-title">Account</h4>
                        <ul class="list-unstyled">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Login" class="footer-link">Sign In</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Register" class="footer-link">Register</a></li>
                            }
                            else if (!User.IsInRole("Admin"))
                            {
                                <li><a asp-controller="Order" asp-action="Index" class="footer-link">My Orders</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index" class="footer-link">Profile</a></li>
                            }
                            else
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index" class="footer-link">Profile</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h4 class="footer-title">Contact Us</h4>
                        <ul class="list-unstyled contact-info">
                            <li><i class="bi bi-geo-alt"></i> 123 Shopping Street, District 1, HCMC, Vietnam</li>
                            <li><i class="bi bi-telephone"></i> +84 123 456 789</li>
                            <li><i class="bi bi-envelope"></i> info@reinamaccredy-shop.com</li>
                            <li><i class="bi bi-clock"></i> Monday - Friday: 9:00 - 22:00</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="container">
                    <div class="row align-items-center py-3">
                        <div class="col-md-6">
                            <p class="mb-md-0">&copy; @DateTime.Now.Year - Reina.MacCredy Shop - All rights reserved</p>
                        </div>
                        <div class="col-md-6">
                            <div class="text-md-end">
                                <a asp-controller="Home" asp-action="Privacy" class="me-3">Privacy Policy</a>
                                <a href="#" class="me-3">Terms of Service</a>
                                <a href="#">FAQ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </footer>
       </div>
       
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    </body>
</html>
